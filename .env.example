# AI Agent Configuration
AGENT_MODEL=gpt-4-turbo-preview
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2048
AGENT_SYSTEM_PROMPT_PATH=agent/config/prompts/system_prompt.txt

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# MCP Server Configuration
MCP_SIM_ACTIONS_HOST=localhost
MCP_SIM_ACTIONS_PORT=8001
MCP_SIM_SESSION_HOST=localhost
MCP_SIM_SESSION_PORT=8002
MCP_CONVERSATION_HOST=localhost
MCP_CONVERSATION_PORT=8003
MCP_EXTERNAL_HOST=localhost
MCP_EXTERNAL_PORT=8004

# External API Keys
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
OPENWEATHER_API_KEY=your-openweather-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Database Configuration
DATABASE_URL=sqlite:///./project_caesar.db
DATABASE_ECHO=false

# Unreal Engine Communication
UNREAL_ENGINE_HOST=localhost
UNREAL_ENGINE_PORT=8080
UNREAL_ENGINE_ENDPOINT=/api/v1

# Audio/TTS Configuration
TTS_ENGINE=pyttsx3
TTS_VOICE_RATE=200
TTS_VOICE_VOLUME=0.8

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured

# Development Settings
DEBUG=true
ENVIRONMENT=development

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3

# Simulation Settings
DEFAULT_LOCATION=Yalova, Turkey
DEFAULT_TEMPERATURE=22.0
DEFAULT_MUSIC_VOLUME=0.5
